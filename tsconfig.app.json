{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "types": ["vite/client"]
  },
  "exclude": [
    "libs/src/**/*.spec.ts",
    "libs/src/**/*.test.ts",
    "libs/src/**/*.spec.vue",
    "libs/src/**/*.test.vue",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": [
    "libs/src/**/*.js",
    "libs/src/**/*.jsx",
    "libs/src/**/*.ts",
    "libs/src/**/*.vue"
  ]
}
